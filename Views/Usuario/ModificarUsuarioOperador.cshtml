@model ViewUsuarioUpdate

<form asp-controller="Usuario" asp-action="ModificarUsuario" method="post">
    <div>
        <label asp-for="@Model.Id">Id</label>
        <input asp-for="@Model.Id" value="@Model.Id" readonly>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario">Nombre de usuario</label>
        <input asp-for="@Model.NombreDeUsuario" required maxlength="25">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia">Contrase√±a</label>
        <input type="password" asp-for="@Model.Contrasenia" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rol">Rol</label>
        <input asp-for="@Model.Rol" value="@Model.Rol" readonly>
    </div>

    <button type="submit" asp-route-idBuscado="@Model.Id">Enviar</button>
    <button><a asp-controller="Usuario" asp-action="ListarUsuario">Cancelar</a></button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}