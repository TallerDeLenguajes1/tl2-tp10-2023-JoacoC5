@{
    ViewData["Title"] = "Usuario";
}

@model ViewUsuarioAgregar

<form asp-controller="Usuario" asp-action="CrearUsuario" method="post">
    <div class="text-center">
        <div class="mb-3">
            <label asp-for="@Model.NombreDeUsuario" class="form-group">Nombre de usuario</label>
            <input asp-for="@Model.NombreDeUsuario" required maxlength="25">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Contrasenia" class="form-group">Contrase√±a</label>
            <input type="password" asp-for="@Model.Contrasenia" required>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Rol" class="form-group">Rol</label>
            <select asp-for="@Model.Rol" class="form-select">
                <option value="Operador">Operador</option>
                <option value="Administrador">Administrador</option>
            </select>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Enviar</button>
            <button><a asp-controller="Usuario" asp-action="ListarUsuario" class="link-secondary">Cancelar</a></button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}