@model ViewTareaAgregar

<form asp-controller="Tarea" asp-action="CrearTarea">
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Id Tablero</label>
        <input asp-for="@Model.IdTablero" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="form-control" required maxlength="30">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado</label>
        <input asp-for="@Model.Estado" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" maxlength="100">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color</label>
        <input asp-for="@Model.Color" class="form-control">
    </div>

    <button type="submit">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}