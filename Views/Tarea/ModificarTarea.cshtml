@model ViewTareaUpdate

<form asp-controller="Tarea" asp-action="ModificarTarea" method="post">
    <div class="form-group">
        <label asp-for="@Model.Id">Id</label>
        <input asp-for="@Model.Id" value="@Model.Id" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Id Tablero</label>
        <input asp-for="@Model.IdTablero" value="@Model.IdTablero" required>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" required maxlength="30">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado</label>
        <input asp-for="@Model.Estado" value="@Model.Estado">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" value="@Model.Descripcion" maxlength="100">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color</label>
        <input asp-for="@Model.Color" value="@Model.Color">
    </div>

    <button type="submit">Enviar</button>
</form>
