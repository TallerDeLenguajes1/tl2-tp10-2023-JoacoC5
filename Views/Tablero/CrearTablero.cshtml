@model ViewTableroAgregar

<form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="text-center">
        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-group">Nombre</label>
            <input asp-for="@Model.Nombre" required maxlength="30" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.IdUsuarioAsignado" class="form-group">Usuario asignado</label>
            <select asp-for="@Model.IdUsuarioAsignado">
                @foreach (var u in @Model.Usuarios)
                {
                    @if (u.Id != 0 && u.Id != null)
                    {
                        <option value="@u.Id">@u.NombreDeUsuario</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Descripcion" class="form-group">Descripcion</label>
            <input asp-for="@Model.Descripcion" maxlength="100" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Enviar</button>
            <button><a asp-controller="Tablero" asp-action="ListarTablero" class="link-secondary">Cancelar</a></button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}