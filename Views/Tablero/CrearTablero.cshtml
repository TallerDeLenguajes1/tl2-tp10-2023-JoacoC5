@model ViewTableroAgregar

<form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="" form-control required maxlength="30" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Usuario asignado</label>
        <input asp-for="@Model.IdUsuarioAsignado" class="" form-control required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="" form-control maxlength="100" />
    </div>

    <button type="submit">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}