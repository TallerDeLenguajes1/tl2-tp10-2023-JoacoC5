@model ViewTableroAgregar

<form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" required maxlength="30" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Usuario asignado</label>
        <input asp-for="@Model.IdUsuarioAsignado" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" maxlength="100" />
    </div>

    <button type="submit">Enviar</button>
    <button><a asp-controller="Tablero" asp-action="ListarTablero">Cancelar</a></button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}