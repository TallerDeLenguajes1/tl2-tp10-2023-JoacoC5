@model ViewTableroLista

<h1>Lista Tableros</h1>

<table class="table table-bordered border-secondary" class="text-center">
    <thead class="table-light">
        <tr class="text-center">
            <th>Usuario Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model.ViewTableros)
        {
            <tr class="text-center">
                <td>@tablero.NombrePropietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>
                    <a asp-controller="Tablero" asp-action="ModificarTablero" asp-route-idBuscado="@tablero.Id"
                        class="link-info">Modificar</a>
                </td>
                <td>
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idBuscado="@tablero.Id"
                        class="link-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<footer>
    <a asp-controller="Tablero" asp-action="CrearTablero">Agregar tablero nuevo</a>
</footer>