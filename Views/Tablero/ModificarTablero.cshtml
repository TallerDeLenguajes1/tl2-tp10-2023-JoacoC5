@model ViewTableroUpdate

<form asp-controller="Tablero" asp-action="ModificarTablero" method="post">
    <div class="text-center">
        <div class="mb-3">
            @*<label asp-for="@Model.Id" class="form-group">Id</label>*@
            <input asp-for="@Model.Id" value="@Model.Id" hidden>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-group">Nombre</label>
            <input asp-for="@Model.Nombre" value="@Model.Nombre" required maxlength="30">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.IdUsuarioPropietario" class="form-group">Usuario Propietario</label>
            <select asp-for="@Model.IdUsuarioPropietario">
                @foreach (var u in @Model.Usuarios)
                {
                    <option value="@u.Id">@u.NombreDeUsuario</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Descripcion" class="form-group">Descripcion</label>
            <input asp-for="@Model.Descripcion" value="@Model.Descripcion" maxlength="100">
        </div>

        <div class="mb-3">
            <button type="submit" asp-route-idBuscado="@Model.Id" class="btn btn-success">Enviar</button>
            <button><a asp-controller="Tablero" asp-action="ListarTablero" class="link-secondary">Cancelar</a></button>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}